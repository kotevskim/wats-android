<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="15dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp"
    android:paddingStart="5dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/textlines"
    android:color="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/question_person_photo"
        android:layout_marginEnd="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/question_person_name"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/question_person_photo"
        android:text="Name"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="4dp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/question_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/question_date"
        android:textSize="@dimen/text_size_small"
        android:color="@color/implicit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/question_person_name"
        android:layout_alignBottom="@+id/question_person_name"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:text="date"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/question_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_person_name"
        android:layout_alignStart="@id/question_person_name"
        android:text="Some description"
        android:textAppearance="?attr/textAppearanceListItem" />

</RelativeLayout>




