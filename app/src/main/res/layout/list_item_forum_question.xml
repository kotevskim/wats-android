<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/colorPrimaryDark"
    android:color="@color/colorAccent"
    android:paddingBottom="15dp"
    android:paddingEnd="10dp"
    android:paddingStart="5dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/question_person_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/question_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/question_person_photo"
        android:text="Name"
        android:textColor="@color/light"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/question_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/question_person_name"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/question_person_name"
        android:color="@color/implicit"
        android:gravity="right"
        android:text="date"
        android:textColor="@color/implicit"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/question_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/question_person_name"
        android:layout_below="@+id/question_person_name"
        android:text="Some description"
        android:textColor="@color/light" />

</RelativeLayout>




